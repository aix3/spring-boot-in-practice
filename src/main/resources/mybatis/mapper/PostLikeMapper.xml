<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.jaggerwang.sbip.adapter.dao.mybatis.mapper.PostLikeMapper" >
    <resultMap id="postLikeResultMap" type="postLike" >
        <id property="id" column="id" />
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO post_like (post_id, user_id)
        VALUES (#{postId}, #{userId})
    </insert>

    <update id="update">
        UPDATE post_like
        <set>
            <if test="postId != null">post_id=#{postId}</if>
            <if test="userId != null">user_id=#{userId}</if>
        </set>
        WHERE id=#{id}
    </update>

    <delete id="delete">
        DELETE FROM post_like WHERE id=#{id}
    </delete>

    <delete id="deleteByUserIdAndPostId">
        DELETE FROM post_like WHERE user_id=#{userId} AND post_id=#{postId}
    </delete>

    <select id="select" resultMap="postLikeResultMap">
        SELECT * FROM post_like WHERE id = #{id}
    </select>

    <select id="selectByUserIdAndPostId" resultMap="postLikeResultMap">
        SELECT * FROM post_like WHERE user_id=#{userId} AND post_id=#{postId}
    </select>
</mapper>